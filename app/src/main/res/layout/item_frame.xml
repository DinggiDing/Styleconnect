<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/office_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentLeft="true"
    android:layout_alignParentTop="true"
    android:layout_gravity="center_horizontal"
    android:layout_marginLeft="50dp"
    android:layout_marginRight="50dp"
    app:cardElevation="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/codi_category"
            android:layout_width="149dp"
            android:layout_height="25dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="28dp"
            android:layout_marginTop="34dp"
            android:autoSizeTextType="uniform"
            android:fontFamily="@font/comfortaa"
            android:lineHeight="40sp"
            android:text=""
            android:textAppearance="@style/item_name_style" />

        <ImageView
            android:id="@+id/codi_image"
            android:layout_width="306dp"
            android:layout_height="385dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="10dp"
            android:background="@android:color/transparent" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="30dp">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/desi_profile_img"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="30dp"
                android:layout_gravity="center_vertical"
                android:background="@drawable/ellipse" />

            <TextView
                android:id="@+id/desi_profile_ID"
                android:layout_width="80dp"
                android:layout_height="18dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="10dp"
                android:autoSizeTextType="uniform"
                android:fontFamily="@font/comfortaa"
                android:lineHeight="40sp"
                android:text=""
                android:layout_gravity="center_vertical"
                android:textAppearance="@style/item_name_style" />

            <ImageButton
                android:id="@+id/like_icon"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="15dp"
                android:layout_gravity="center_vertical"
                android:background="@drawable/designer_like_icon" />

            <TextView
                android:id="@+id/desi_profile_like"
                android:layout_width="50dp"
                android:layout_height="18dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="10dp"
                android:layout_gravity="center_vertical"
                android:autoSizeTextType="uniform"
                android:fontFamily="@font/comfortaa"
                android:lineHeight="18sp"
                android:text=""
                android:textAppearance="@style/item_name_style" />
        </LinearLayout>
    </LinearLayout>


</androidx.cardview.widget.CardView>